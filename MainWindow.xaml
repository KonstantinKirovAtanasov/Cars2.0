<Window x:Class="Cars2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cars2._0"
        xmlns:vm="clr-namespace:Cars2._0.ViewModels"
        xmlns:v="clr-namespace:Cars2._0.Views"
        xmlns:vmn="clr-namespace:Cars2._0.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="620" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="nvm" DataType="{x:Type vm:NavigationViewModel}">
            <v:AddCarView DataContext="{Binding Path=SelectedVM}"/>
        </DataTemplate>
        <!--<DataTemplate x:Key="lcvm" DataType="{x:Type vm:ListedCarsViewModel}">
            <v:ListedCarsView DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Key="sscvm" DataType="{x:Type vm:ShowSelectedCarViewModel}">
            <v:ShowSeletedCarView DataContext="{Binding}"/>
        </DataTemplate>-->
    </Window.Resources>
    <Grid>
        <ContentControl ContentTemplate="{StaticResource ResourceKey=nvm}"></ContentControl>
    </Grid>
</Window>
